<!DOCTYPE html>
<html lang="en">

<head>
    <title>Signup</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .signup-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            /* background-color: #2a2c36; */
            background-color: #404040;
        }

        .image {
            width: 400px;
            background: #000;
            height: 100%;
        }

        .image img {
            width: 100%;
            height: 100%;
        }

        .signup-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 800px;
        }
		
        /* .signup-content {
            display: flex;
            flex-direction: column;
            align-items: center;
        } */

        .signup-form {
            background-color: white;
            padding: 2rem;
            /* border-radius: 10px; */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        .signup-title {
            font-size: 30px;
            text-align: center;
            margin-bottom: 1.5rem;
            color: #000000;
        }

        .form-group {
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        .form-group label {
            width: 120px;
            margin-right: 10px;
        }

        .form-group input {
            flex: 1;
            width: 100%;
            padding: 0.5rem;
            /* border: 1px solid #ccc; */
            border: 1px solid #f2f2f2;
            border-radius: 5px;
            background-color: #f2f2f2;
            color: #000000;
        }

        .signup-button {
            width: 100%;
            padding: 0.6rem;
            background-color: #000000;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
        }

        .signup-button:hover {
            background-color: #2a2c39;
        }

        .signup-button:disabled {
            background-color: #5a5c66;
            cursor: not-allowed;
        }

        .divider-container {
            display: flex;
            align-items: center;
            margin: 20px 0;
            width: 100%;
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background-color: #e0e0e0;
        }

        .divider-text {
            padding: 0 15px;
            color: #909090;
            font-size: 14px;
        }

        .text-container{
            display: flex;
            justify-content: center;
            width: 100%;
        }

        .text{
            padding: 0 15px;
            color: #909090;
            font-size: 14px;
        }

        .social-login {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
        }

        .social-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 1px solid #e0e0e0;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-weight: bold;
        }

        .google-btn {
            color: #f45442;
        }

        .facebook-btn {
            color: #3b5998;
        }

        .message {
            margin-top: 15px;
            padding: 8px 12px;
            border-radius: 5px;
            font-weight: 500;
            width: 400px;
            text-align: center;
        }

        .message-success {
            background-color: rgba(76, 175, 80, 0.1);
            color: #4CAF50;
            max-width: 340px;
            /* border: 1px solid #4CAF50; */
        }

        .message-error {
            background-color: rgba(244, 67, 54, 0.1);
            color: #F44336;
            max-width: 340px;
            /* border: 1px solid #F44336; */
        }

        .loader {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>

<body>
    <div class="signup-container">
        <div class="signup-content">
            <div class="image">
                <img src="/images/Signup_wallpaper.jpeg" alt="">
            </div>
            <form id="signupForm" class="signup-form">
                <h2 class="signup-title">Create an account</h2>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Username" required />
                </div>
                <div class="form-group">
                    <label for="fullName">Full Name</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Full Name" required />
                </div>
                <div class="form-group">
                    <label for="email">Eamil</label>
                    <input type="email" id="email" name="email" placeholder="Email" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Password" required />
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Pasword</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="confirmPassword"
                        required>
                </div>
                <button id="signupBtn" type="submit" class="signup-button">
                    <span id="buttonText">Create an account</span>
                    <div class="loader" id="buttonLoader"></div>
                </button>
                <div id="message" class="message" style="display: none;"></div>
                <div class="divider-container">
                    <div class="divider-line"></div>
                    <div class="divider-text">or</div>
                    <div class="divider-line"></div>
                </div>
                <div class="text-container">
                    <div class="text">Signup with these services</div>
                </div>
                <div class="social-login">
                    <button type="button" class="social-btn google-btn">G</button>
                    <button type="button" class="social-btn facebook-btn">f</button>
                </div>
                <div class="text-container">
                    <div class="text">I'm already a member!<a href="">Sign In</a></div>
                </div>
            </form>
            <!-- <div class="image">
                <img src="/images/Signup_wallpaper.jpeg" alt="">
            </div> -->
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('signupForm');
            const messageElement = document.getElementById('message');
            const signupBtn = document.getElementById('signupBtn');
            const buttonLoader = document.getElementById('buttonLoader');
            const buttonText = document.getElementById('buttonText');

            //Form elements
            const usernameInput = document.getElementById('username');
            const emailInput = document.getElementById('email');
            const fullNameInput = document.getElementById('fullName');
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');

            function showLoading() {
                buttonText.style.display = 'none';
                buttonLoader.style.display = 'inline-block';
                signupBtn.disabled = true;
                form.querySelectorAll('input').forEach(input => {
                    input.disabled = true
                });
            }

            function hideLoading() {
                buttonText.style.display = 'inline-block';
                buttonLoader.style.display = 'none';
                signupBtn.disabled = false;
                form.querySelectorAll('input').forEach(input => {
                    input.disabled = false;
                });
            }

            form.addEventListener('submit', async function (event) {
                event.preventDefault();

                const username = usernameInput.value;
                const email = emailInput.value;
                const fullName = fullNameInput.value;
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;

                if (password !== confirmPassword) {
                    messageElement.textContent = "Password and Confirm Password do not match.";
                    messageElement.classList.add('message-error');
                    messageElement.classList.remove('message-success');
                    messageElement.style.display = 'block';
                    return;
                }

                showLoading();

                try {
                    const API_URL = "http://localhost:5000/api/v1/user/signup";
                    const response = await axios.post(API_URL, {
                        username,
                        email,
                        fullName,
                        password
                    });

                    const data = response.data;
                    if (data.success) {
                        messageElement.textContent = data.message;
                        messageElement.classList.add('message-success');
                        messageElement.classList.remove('message-error');
                    } else {
                        messageElement.textContent = "Signup Failed: " + data.message;
                        messageElement.classList.add('message-error');
                        messageElement.classList.remove('message-success');
                    }
                    messageElement.style.display = 'block';
                } catch (error) {
                    console.error(error);
                    if (error.response && error.response.status === 400) {
                        messageElement.textContent = "User already exists: " + (error.response.data.message || '');
                    } else {
                        messageElement.textContent = "An error occured: " + error.message;
                    }
                    messageElement.classList.add('message-error');
                    messageElement.classList.remove('message-success');
                    messageElement.style.display = 'block';
                } finally {
                    hideLoading();
                }
            })
        });
    </script>
</body>

</html>